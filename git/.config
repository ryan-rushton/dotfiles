#!/bin/bash

# User setup
git config --global user.email "ryan.rushton79@gmail.com"
git config --global user.name "Ryan Rushton"

# Use ort strategy for merging
git config --global pull.twohead ort

# Use vim as editor for commits ect
git config --global core.editor "vim"

# Set up a global git ignore file
GLOBAL_GITIGNORE="$HOME/.gitignore_global"
touch "$GLOBAL_GITIGNORE"
git config --global core.excludesfile "$GLOBAL_GITIGNORE"
